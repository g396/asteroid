<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="sns.asteroid.view.BindingAdapter"/>
        <import type="android.view.View"/>
        <variable
            name="thumbnail"
            type="String" />
        <variable
            name="cardTitle"
            type="String" />
        <variable
            name="cardDescription"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView
        style="@style/CardViewRows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowTootCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_normal"
            android:backgroundTint="@color/cardview_sub_background">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:visibility="@{thumbnail == null ? View.GONE : View.VISIBLE}"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="16:9"
                app:glide="@{thumbnail}"
                app:layout_constraintWidth="match_parent"
                app:layout_constraintHeight="wrap_content_constrained"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/cardContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ellipsize="end"
                android:maxLines="10"
                android:text="@string/sample_summary"
                app:customTextSize='@{"default"}'
                app:cardDescription="@{cardDescription}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ellipsize="end"
                android:maxLines="10"
                android:text="@string/sample_display_name"
                android:textStyle="bold"
                app:customTextSize='@{"default"}'
                app:cardTitle="@{cardTitle}"
                app:layout_constraintBottom_toTopOf="@+id/cardContent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thumbnail" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>