<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/button_boost_active" android:gravity="center"/>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item android:drawable="@drawable/button_boost_disable" android:gravity="center"/>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/button_boost" android:gravity="center"/>
        </layer-list>
    </item>
</selector>